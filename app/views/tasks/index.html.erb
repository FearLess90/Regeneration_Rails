<style>
    .itemList{
        width: 75px;
        padding-left: 5px;
        background-color: rgb(214, 214, 214);
        border-radius: 5px;
        color: rgb(255, 87, 34);
        font-weight: bold;
        margin-top: 5px;
        margin-right: 3px;

    }

    #cart{
        height:150px;
        
    }

    .inline_class {
        display:inline-block;
    }
</style>
<label for="tb_clients">Please enter the client last name:</label>
<input id="tb_clients" type="text" data-provide="typeahead" />

<div id="ClientDetails"></div>

<div id="TasksDetails">

    <a href="#new-task" role="button" class="btn btn-success" data-toggle="modal">Create a new Task</a>
    <button class="btn btn-primary">View Current Tasks</button>
    <button class="btn btn-warning">View Previous Tasks</button>

</div>

<div id="new-task" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3>New Task</h3>
    </div>
    <div class="modal-body">
        <div class="row-fluid">
            <div class="span5">
                <div id="cartridges">
                    <ul id="myTab" class="nav nav-tabs">
                        <% @makes.each do |m| %>
                            <li><a href='<%= "##{m.name}"%>' data-toggle="tab"> <%= "#{m.name}"%> </a></li>
                        <% end %>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                    <% @makes.each do |m| %>
                        <div class="tab-pane fade" id="<%= "#{m.name}"%>">
                            <% m.cartridges.each do |c| %>
                                <div class="itemList" data-item="<%= c.id %>"><%= c.name %></div>
                            <% end %>
                        </div>
                    <% end %>
                    </div>
                </div>
            </div>
            <div class="span5">
                <div id="cart">
                   <fieldset>
                        <legend>Total:</legend> 
                   </fieldset>
                </div>
            </div>
        </div>
        <div class="row-fluid" style="margin-top: 15px;">
            <label for="dp3">Due For:</label>
            <div class="input-append date" id="dp3" data-date="" data-date-format="dd-mm-yyyy">
                <input class="span10" size="16" type="text" readonly="">
                <span class="add-on"><i class="icon-calendar"></i></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button id="submit-task" class="btn btn-primary">Save changes</button>
    </div>
</div>

<table id="tasks-table" class="table table-striped">
  <tbody id="tasks">

  </tbody>
</table>